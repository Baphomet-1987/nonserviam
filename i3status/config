	format_up = "Wifi: %ip on %essid"
	format_down = "Wifi: down"
}

battery 0 {
	format = "Bat: %status %remaining %emptytime"
	format_down = "No battery"
	status_chr = "âš¡ CHR"
	status_bat = "ðŸ”‹ BAT"
	status_unk = "? UNK"
	status_full = "â˜» FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
