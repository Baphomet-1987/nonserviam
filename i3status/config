general {
        output_format = "i3bar"
	colors = true
	interval = 1
	color_good = "#BBBBBB"
	color_bad = "#CC1616"
	color_degraded = "#55858E"
}

order += "volume master"
#order += "backlight"
order += "cpu_temperature 0"
order += "disk /"
order += "disk /home"
order += "disk /home/caddy.ssd"
order += "wireless wlan0"
order += "battery 0"
order += "path_exists VPN"
order += "tztime local"

